@import '_partial/base/ress'

/* Variables
--------------------------------------------------------------------------------------------------------*/

// Android one S2 → 398px
// iPhone5C → 338px

pc-width = 1200px
sp-width = 767px
spm-width = 397px


:root
    --theme-color linear-gradient(90deg, rgb(63, 191, 187), rgb(63, 171, 191))

    --background-color #f9f9f9
    --background-sub-color #fff
    --background-dark-color #555b6e
    --background-hover-color #f9f9f9

    --text-color #333
    --text-link-color #333
    --text-link-default-color #1a0dab
    --text-sub-color #888
    --text-accent-color #3fb5bd
    --text-disabled-color #eee

    --border-color #ddd



[data-mode='dark']
    --theme-color #333

    --background-color #202124
    --background-sub-color #333
    --background-dark-color #333
    --background-hover-color #444

    --text-color #E8EAED
    --text-link-color #E8EAED
    --text-link-default-color #8ab4f8
    --text-sub-color #9AA0A6
    --text-accent-color #8ab4f8
    --text-disabled-color #555

    --border-color #555



media(bpName)
    for name in bpName
        if name == 'spm'
            @media only screen and (max-width: spm-width)
                {block}
        if name == 'sp'
            @media only screen and (max-width: sp-width)
                {block}
        if name == 'tabsp'
            @media only screen and (max-width: pc-width - 1px)
                {block}
        if name == 'tab'
            @media only screen and (min-width: sp-width + 1px) and (max-width: pc-width - 1px)
                {block}
        if name == 'pc'
            @media only screen and (min-width: pc-width)
                {block}


html
    scroll-behavior: smooth

body
    background: var(--background-color)
    font-family: "Hiragino Kaku Gothic Pro","ヒラギノ角ゴ Pro W3","メイリオ","Meiryo","ＭＳ Ｐゴシック","Helvetica Neue","Helvetica","Arial",sans-serif


::selection
    background: #b3d4fc
    color: #444


@keyframes spinner
    from
        transform rotate(0deg)
    to
        transform rotate(360deg)

.loading
    position relative

.loading::before
    --spinner-size: 36px
    content ""
    position absolute
    top calc(50% - 0.5*var(--spinner-size))
    left calc(50% - 0.5*var(--spinner-size))
    z-index 0
    width var(--spinner-size)
    height var(--spinner-size)
    border-radius 50%
    border 2px solid rgb(204,204,204)
    border-top-color rgb(51,51,51)
    animation spinner .5s cubic-bezier(.42, .61, .58, .41) infinite



