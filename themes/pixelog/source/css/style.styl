@import '_partial/base/ress'

/* Variables
--------------------------------------------------------------------------------------------------------*/

// Android one S2 → 398px
// iPhone5C → 338px

pc-width = 1200px
sp-width = 767px
spm-width = 397px

theme-color = #3fb5bd // #48A9A6
theme-color-dark = #32827f
theme-color-second = #555B6E
theme-color-accent = #EF6461
theme-color-btn = #555B6E
theme-color-back = #f9f9f9


media(bpName)
    for name in bpName
        if name == 'spm'
            @media only screen and (max-width: spm-width)
                {block}
        if name == 'sp'
            @media only screen and (max-width: sp-width)
                {block}
        if name == 'tabsp'
            @media only screen and (max-width: pc-width - 1px)
                {block}
        if name == 'tab'
            @media only screen and (min-width: sp-width + 1px) and (max-width: pc-width - 1px)
                {block}
        if name == 'pc'
            @media only screen and (min-width: pc-width)
                {block}


html
    scroll-behavior: smooth

body
    background: theme-color-back
    font-family: "Hiragino Kaku Gothic Pro","ヒラギノ角ゴ Pro W3","メイリオ","Meiryo","ＭＳ Ｐゴシック","Helvetica Neue","Helvetica","Arial",sans-serif


::selection
    background: #b3d4fc
    color: #444


@keyframes spinner
    from
        transform rotate(0deg)
    to
        transform rotate(360deg)

.loading
    position relative

.loading::before
    --spinner-size: 36px
    content ""
    position absolute
    top calc(50% - 0.5*var(--spinner-size))
    left calc(50% - 0.5*var(--spinner-size))
    z-index 0
    width var(--spinner-size)
    height var(--spinner-size)
    border-radius 50%
    border 2px solid rgb(204,204,204)
    border-top-color rgb(51,51,51)
    animation spinner .5s cubic-bezier(.42, .61, .58, .41) infinite



