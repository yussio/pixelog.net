@charset "utf-8";
@import '_partial/base/*'
@import '_partial/variables'

/* base
--------------------------------------------------------------------------------------------------------*/


body
    background #f8f8fa
    background var(--background-color)
    font-family sans-serif

::selection
    background #b3d4fc
    color #444

a
    color var(--text-link-color)
    text-decoration none


@keyframes spinner
    from
        transform rotate(0deg)
    to
        transform rotate(360deg)

.loading
    position relative

.loading::before
    --spinner-size: 36px
    content ""
    position absolute
    top calc(50% - 0.5*var(--spinner-size))
    left calc(50% - 0.5*var(--spinner-size))
    z-index 0
    width var(--spinner-size)
    height var(--spinner-size)
    border-radius 50%
    border 2px solid rgb(204,204,204)
    border-top-color rgb(51,51,51)
    animation spinner .5s cubic-bezier(.42, .61, .58, .41) infinite


#alert
    position fixed
    width 100%
    padding 8px 16px
    background var(--background-sub-color)
    color var(--text-color)
    font-size 14px
    box-shadow 0 0 16px rgba(0,0,0,.06)
    bottom 0
    left 0
    animation fadein .2s ease-out both

#alert.fadeout
    animation fadeout .2s ease-out both

@keyframes fadein
    0%
        transform translateY(100%)
        opacity 0
    100%
        transform translateY(0)
        opacity .9

@keyframes fadeout
    0%
        transform translateY(0)
        opacity .9
    100%
        transform translateY(100%)
        opacity 0



