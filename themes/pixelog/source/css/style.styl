@charset "utf-8";
@import '_partial/base/*'
@import '_partial/variables'

/* base
--------------------------------------------------------------------------------------------------------*/


body
    background #f8f8fa
    background var(--background-color)
    font-family sans-serif

::selection
    background #b3d4fc
    color #444

a
    color var(--text-link-color)
    text-decoration none


@keyframes spinner
    from
        transform rotate(0deg)
    to
        transform rotate(360deg)

.loading
    position relative

.loading::before
    --spinner-size: 36px
    content ""
    position absolute
    top calc(50% - 0.5*var(--spinner-size))
    left calc(50% - 0.5*var(--spinner-size))
    z-index 0
    width var(--spinner-size)
    height var(--spinner-size)
    border-radius 50%
    border 2px solid rgb(204,204,204)
    border-top-color rgb(51,51,51)
    animation spinner .5s cubic-bezier(.42, .61, .58, .41) infinite


/* partial
--------------------------------------------------------------------------------------------------------*/

@import '_partial/component/highlight/atom-one-dark.css'
@import '_partial/layout/*'


#pixel-viewer
    display flex
    flex-direction column
    width 100%
    height 100%
    background rgba(0, 0, 0, .9)
    position fixed
    top 0
    left 0
    z-index 10
    animation fadein .2s ease-out both
    cursor pointer
    user-select none
    -webkit-tap-highlight-color transparent
    tap-highlight-color transparent

    &.fadeout
        animation fadeout .2s ease-out both
        pointer-events none /* ← IE救済措置（IEでこれがないと画像を閉じた後にページ全体がクリックできなくなります...）*/

        & #pixel-viewer__img
            animation scaledown .2s ease-out both

#pixel-viewer__alt
    width: 100%
    height 44px
    line-height 44px
    padding 0 48px 0 12px
    background rgba(0, 0, 0, .95)
    color #eee
    font-size 14px
    text-overflow ellipsis /* スマホなどでaltが横幅をはみ出たときに省略します */
    white-space nowrap
    overflow hidden

    &::before
    &::after
        content ""
        dispaly block
        width 24px
        height 3px
        background #eee
        border-radius 4px
        position fixed
        top 20px
        right 12px
        z-index 12
    &::before
        transform rotate(45deg)
    &::after
        transform rotate(-45deg)

#pixel-viewer__img
    display block
    margin auto
    max-width 100%
    max-height calc(100% - 44px)
    animation scaleup .2s ease-out both

@keyframes fadein
    0%
        opacity 0
    100%
        opacity 1

@keyframes scaleup
    0%
        transform scale(.95)
    100%
        transform scale(1)

@keyframes fadeout
    0%
        opacity 1
    100%
        opacity 0

@keyframes scaledown
    0%
        transform scale(1)
    100%
        transform scale(.95)
