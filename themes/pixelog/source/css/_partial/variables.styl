pc-width = 1200px
sp-width = 767px


:root
  --theme-color #34a9b1

  --bg-primary-color linear-gradient(216deg,rgba(77,77,77,.05) 0,rgba(77,77,77,.05) 25%,rgba(42,42,42,.05) 25%,rgba(42,42,42,.05) 38%,rgba(223,223,223,.05) 38%,rgba(223,223,223,.05) 75%,rgba(36,36,36,.05) 75%,rgba(36,36,36,.05) 100%),linear-gradient(44deg,rgba(128,128,128,.05) 0,rgba(128,128,128,.05) 34%,rgba(212,212,212,.05) 34%,rgba(212,212,212,.05) 57%,rgba(25,25,25,.05) 57%,rgba(25,25,25,.05) 89%,rgba(135,135,135,.05) 89%,rgba(135,135,135,.05) 100%),linear-gradient(241deg,rgba(55,55,55,.05) 0,rgba(55,55,55,.05) 14%,rgba(209,209,209,.05) 14%,rgba(209,209,209,.05) 60%,rgba(245,245,245,.05) 60%,rgba(245,245,245,.05) 69%,rgba(164,164,164,.05) 69%,rgba(164,164,164,.05) 100%),linear-gradient(249deg,rgba(248,248,248,.05) 0,rgba(248,248,248,.05) 32%,rgba(148,148,148,.05) 32%,rgba(148,148,148,.05) 35%,rgba(202,202,202,.05) 35%,rgba(202,202,202,.05) 51%,rgba(181,181,181,.05) 51%,rgba(181,181,181,.05) 100%),linear-gradient(92deg,var(--theme-color),var(--theme-color))
  --bg-color #f7f7f8
  --bg-sub-color #fff
  --bg-hover-color #fbfbfb
  --bg-current-color #eaeaea

  --text-color #444
  --text-link-color #3884FF
  --text-hover-color #777
  --text-sub-color #999
  --text-dark-sub-color #f2f2f2
  --text-accent-color var(--theme-color)
  --text-disabled-color #eee

  --border-color #e3e3e3
  --border-dotted-color #bbb

  --header-shadow 0
  --container-shadow 0 4px 7px rgba(0,0,0,0.03), 0 0 1px rgba(0,0,0,0.1)



@media (prefers-color-scheme: dark)
  :root
    --theme-color var(--bg-sub-color)

    --bg-color #202124
    --bg-sub-color #28292c
    --bg-hover-color #2d2d2d
    --bg-current-color #3a3a3a

    --text-color #d9d9d9
    --text-link-color var(--text-accent-color)
    --text-hover-color #aaa
    --text-sub-color #9AA0A6
    --text-dark-sub-color var(--text-sub-color)
    --text-accent-color #8ab4f8
    --text-disabled-color #444

    --border-color #444
    --border-dotted-color #777

    --header-shadow var(--container-shadow)
    --container-shadow 0 1px 2px 0 rgba(0, 0, 0, .60), 0 1px 3px 1px rgba(0, 0, 0, .30)

  img
      filter: grayscale(20%)
