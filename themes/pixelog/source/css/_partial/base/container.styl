.container
    display grid
    grid-template-columns 850px 300px
    gap 50px
    justify-content center
    +media(tabsp)
        grid-template-columns minmax(0, 850px)


.aside
    display grid
    align-self start
    gap 60px
    +media(tabsp)
        padding 0 16px
        grid-template-columns repeat(auto-fit, minmax(260px, 1fr))
        gap 50px
