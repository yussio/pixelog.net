body
    background var(--bg-color)
    overflow-y scroll
    font-family sans-serif

::selection
    background #b3d4fc
    color #444

a
    color var(--text-color)
    text-decoration none

p
    margin 1.5em 0

img
    max-width 100%
    vertical-align middle
    border-radius 4px

svg
    display block

table
    width 100%
    margin 30px 0
    font-size 15px
    word-break break-all
    border-collapse collapse

tr
    &:hover
        background var(--bg-hover-color)

th
    padding 6px
    text-align center
    border 1px solid var(--border-color)
    background var(--bg-color)

td
    padding 6px 12px
    border 1px solid var(--border-color)

blockquote
    position relative
    margin 1.5em 0
    padding 1em 2.5em
    font-size .9em
    background var(--bg-color)
    border-radius 4px
    z-index 2
    &:before
    &:after
        position absolute
        font-size 1000%
        color var(--border-color)
        font-family 'TImes NEw ROman',sans-serif
        z-index -1
    &:before
        content "“"
        line-height 0.8em
        top 10px
        left 10px
    &:after
        content "”"
        line-height 0em
        right 10px
        bottom 5px

code:not(.hljs)
    margin 0 .5em
    padding 3px 10px
    background var(--bg-color)
    font-size .875em
    border-radius: 3px
    font-family Consolas,Monaco,'Andale Mono','Ubuntu Mono',monospace

pre
    position relative
