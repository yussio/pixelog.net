.post
    padding 56px
    background var(--bg-sub-color)
    box-shadow var(--container-shadow)
    border-radius 4px
    +media(sp)
      padding 56px 6vw

    &__title
        margin 0 0 1.3em 0
        font-size 1.5em
        word-break break-all

    &__meta
        display flex
        margin 0 0 1.2em 0
        color var(--text-sub-color)
        font-size .9em

    &__updated
        margin 0 0 0 1em


    &__thumbnail-img
        max-width 100%
        vertical-align middle
        border-radius 4px

    &__content
        line-height 1.8
        text-align justify
        word-break break-all
        -webkit-font-smoothing antialiased
        -moz-osx-font-smoothing grayscale

        a
          color var(--text-link-color)
          text-decoration underline

        h2
          margin 2.5em 0 1.2em 0
          border-bottom 1px solid var(--border-color)
          font-size 1.45em

        h3
          font-size 1.1em
          margin 2.5em 0 1.2em 0

        ul
        ol
            margin 0 0 0 2em

        li
            margin .5em 0


    &__ad
        margin 60px 0
        overflow hidden
