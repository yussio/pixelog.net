.post
    padding 50px
    background #fff
    background var(--background-sub-color)
    box-shadow boxshadow
    border-radius 4px
    +media(sp)
      padding 32px 16px


.post-header
    &__title
        margin 0 0 1.2em 0
        font-size 30px
        +media(sp)
            font-size 24px
        +media(spm)
            font-size 22px

        &-link
            display block

    &__meta
        margin 0 0 1em 0
        font-size 14px
        color var(--text-sub-color)

    &__thumbnail-img
        max-width 100%

.content
    &__ad
        margin 48px 0


.post-footer
    &:not(:empty)
        margin 80px 0 0 0

    &__ad
        margin 60px 0 0 0



