.red-box
    border 1px solid #f44336
    margin 20px 0
    padding 16px
    color #f44336
    font-size 14px
    border-radius 4px

.gray-box
    margin 1em 0
    padding 12px
    background #f5f5f5
    border-radius 2px
    overflow-wrap break-word

.btn
    display inline-block
    background #3F51B5
    color #fff
    text-decoration none
    padding 10px 20px
    box-sizing border-box
    line-height 30px
    border-radius 3px
    box-shadow 1px 1px 3px #aaa
    margin 10px 0

    &:hover
        opacity 1
        color #fff

    &:active
        background #5C6BC0

.center
    text-align center


$margin
    margin 2em 0
    padding 8px 16px
    font-size 14px
    color #000


.notice
    @extend $margin
    background #e5ffe1
    border-left 3px solid #60da00

.caution
    @extend $margin
    background #fcf2bf
    border-left 3px solid #f5aa0a


.warning
    @extend $margin
    background #fdd8d8
    border-left 3px solid #e80000


.keyboard
    display inline-flex
    justify-content center
    align-items center
    height 37px
    margin 5px
    padding 0 10px
    border-radius 4px
    box-shadow 0 0 25px rgb(232,232,232) inset, 0 1px 0 rgb(195,195,195), 0 2px 0
    border-top 1px solid rgb(245,245,245)
    background rgb(239,240,242)
    color rgb(170,170,170)
    font bold 14px arial
    text-shadow 0 1px 0 rgb(245,245,245)


.blog-card
    display block
    margin 24px 0
    padding 16px
    font-weight bold
    text-decoration none!important
    border 1px solid var(--border-color)
    border-radius 4px
    box-shadow 1px 2px 2px rgba(0,0,0,0.02)
    transition .2s background ease

    &:hover
        background var(--background-hover-color)

    &::after
        display block
        content "pixelog.net" attr(href)
        font-size 13px
        color var(--text-sub-color)
        font-weight normal


.shake
    display inline-block
    animation shake .2s infinite
@keyframes shake
    0%
        transform translate(0px, 0px) rotateZ(0deg)
    25%
        transform translate(2px, 2px) rotateZ(1deg)
    50%
        transform translate(0px, 2px) rotateZ(0deg)
    75%
        transform translate(2px, 0px) rotateZ(-1deg)
    100%
        transform translate(0px, 0px) rotateZ(0deg)
