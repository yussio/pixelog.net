.post-list
    margin 16px 0
    background #fff
    background var(--background-sub-color)
    box-shadow boxshadow
    border-radius 4px

    &__item
        list-style none
        &:not(:last-child)
            border-bottom 1px solid var(--border-color)

        &-link
            display flex
            padding 36px 24px
            transition .2s background ease-in-out
            align-items center
            +media(sp)
                padding 30px 16px

            &::after
                display block
                flex-shrink 0
                content ""
                width 12px
                height 12px
                margin 0 0 0 auto
                border-top 2px solid #bbb
                border-right 2px solid #bbb
                transform rotate(45deg)
                transition .2s transform, border ease-in-out

            &:hover
                background var(--background-hover-color)

                &::after
                    border-color #ef6461
                    transform rotate(45deg) translate(2px, -2px)

    &__date
        flex-shrink 0
        margin 0 24px 0 0
        color var(--text-sub-color)
        font-size 14px
        +media(sp)
          margin 0 16px 0 0
          font-size 12px


    &__title
        margin 0 .5em 0 0
        font-size 18px
        +media(sp)
            font-size 15px
