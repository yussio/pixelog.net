.footer-menu
    display flex
    width 100%
    margin 0 0 1em 0
    list-style none
    justify-content center

    &__item
        margin 0 1em

    &__link
        color var(--text-light-color)
        position relative

        &::after
            position absolute
            bottom 0
            left 0
            content ''
            width 100%
            height 2px
            background var(--text-light-color)
            transform scale(0, 1)
            transition transform 0.2s

        &:hover::after
            transform scale(1, 1)
