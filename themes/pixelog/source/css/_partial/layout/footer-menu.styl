.footer-menu
    display flex
    width 100%
    margin 0 0 1.2em 0
    font-size .93em
    line-height 1
    list-style none
    justify-content center

    &__item
        padding 0 1em

        & + .footer-menu__item
            border-left 1px solid var(--text-light-sub-color)

    &__link
        color var(--text-light-color)
        position relative

        &::after
            position absolute
            bottom 0
            left 0
            content ''
            width 100%
            height 1px
            background var(--text-light-color)
            transform scale(0, 1)
            transition transform 0.2s

        &:hover::after
            transform scale(1, 1)
