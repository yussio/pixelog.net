.switch
    display flex

    &__name
        margin 0 16px 0 0
        font-size 13px
        color #fff

    &__label
        display block
        width 50px
        height 20px
        background #cfcfcf
        border-radius 46px
        transition .2s background ease-in-out
        cursor pointer

        &::after
            content ''
            display block
            width 20px
            height 20px
            border-radius 50%
            background #fff
            box-shadow 0 1px 5px rgba(0, 0, 0, 0.25)
            transition .2s margin ease-in-out

    &__input
        width 0
        opacity 0

        &:focus + .switch__label
            box-shadow 0 0 0 0.2rem rgba(0,123,255,.25)

        &:checked
            & + .switch__label
                background var(--text-accent-color)

                &::after
                    margin-left calc(100% - 20px)
