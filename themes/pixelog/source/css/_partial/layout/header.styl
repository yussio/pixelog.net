.header
    margin 0 0 60px 0
    padding 14px 0
    background #3fb5bd
    background var(--theme-color)
    box-shadow 0 0 20px 0 rgba(0,0,0,.05)
    +media(tabsp)
        margin 0 0 16px 0


    &__inner
        display flex
        width pc-width
        height 100%
        margin auto
        +media(tabsp)
            width 100%
            padding 0 16px

    &__logo
        margin 0 auto 0 0

    &__logo-link
        display block
        text-decoration none
        color #fff
        text-transform uppercase
        font-size 24px
        font-weight normal


.switch
    display flex
    align-self center

    &__name
        margin 0 16px 0 0
        font-size 13px
        color #fff
        align-self center

    &__label
        display block
        position relative
        width 50px
        height 20px
        background #ccc
        border-radius 46px
        transition .3s all ease
        cursor pointer

        &::after
            content ''
            position absolute
            width 20px
            height 20px
            border-radius 50%
            background #fff
            box-shadow 0 0 5px rgba(0, 0, 0, 0.2)
            transition .2s all ease
            top 0
            left 0

    &__input
        display none

        &:checked
            & + .switch__label
                background var(--text-accent-color)

                &::after
                    left calc(100% - 20px)
