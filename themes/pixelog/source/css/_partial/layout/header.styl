.header
    margin 0 0 60px 0
    padding 24px 0
    background #3fb5bd
    background var(--theme-color)
    box-shadow 0 0 20px 0 rgba(0,0,0,.05)
    +media(tabsp)
        margin 0 0 16px 0
    +media(sp)
        padding 24px 0



    &__inner
        display flex
        width pc-width
        height 100%
        margin auto
        +media(tabsp)
            width 96%
        +media(sp)
            flex-direction column

    &__logo
        display flex
        margin 0 auto 0 0
        +media(sp)
            margin auto

    &__svg
        display block


.switch
    display flex
    align-self center
    +media(sp)
        margin 32px 0 0 0

    &__name
        height 24px
        line-height 24px
        margin 0 16px 0 0
        font-size 13px
        color #fff
        align-self center

    &__label
        display block
        position relative
        width 58px
        height 24px
        background #ccc
        border-radius 46px
        transition .2s all ease
        cursor pointer

        &::after
            content ''
            position absolute
            width 24px
            height 24px
            border-radius 50%
            background #fff
            box-shadow 0 0 5px rgba(0, 0, 0, 0.2)
            transition .2s all ease
            top 0
            left 0

    &__input
        display none

        &:checked
            & + .switch__label
                background var(--text-accent-color)

                &::after
                    left calc(100% - 24px)
