.header
    background var(--theme-color)
    box-shadow var(--header-shadow)

    &__inner
        display flex
        max-width pc-width
        margin auto
        padding 26px 16px
        box-sizing content-box
        justify-content space-between
        align-items center
        +media(sp)
            height 76px
            padding 32px 16px
            flex-direction column


    &__link
        display block
