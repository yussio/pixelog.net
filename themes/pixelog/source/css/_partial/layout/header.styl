.header
    margin 0 0 60px 0
    padding 26px 16px
    background var(--theme-color)
    box-shadow 0 0 20px 0 rgba(0,0,0,.05)
    +media(tabsp)
        margin 0 0 32px 0
    +media(sp)
        margin 0 0 16px 0
        padding 32px 16px

    &__inner
        display flex
        max-width pc-width
        margin auto
        justify-content space-between
        align-items center
        +media(sp)
            height 80px
            flex-direction column


    &__link
        display block
