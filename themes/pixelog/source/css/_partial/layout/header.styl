.header
    margin 0 0 60px 0
    background var(--theme-color)
    box-shadow 0 0 20px 0 rgba(0,0,0,.05)
    +media(tabsp)
        margin 0 0 32px 0
    +media(sp)
        margin 0 0 16px 0

    &__inner
        display flex
        width pc-width
        margin auto
        padding 26px 0
        justify-content space-between
        align-items center
        +media(tabsp)
            width 100%
            padding 26px 16px
        +media(sp)
            height 144px
            padding 32px 0
            flex-direction column


    &__logo-link
        display block

    &__svg
        display block
