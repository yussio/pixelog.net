.header
    background var(--theme-color)
    box-shadow var(--header-shadow)
    transition .15s background ease
    +media(sp)
        font-size 12px

    &:hover
        background rgba(68, 97, 123, .9)

    &__logo
        font-size 1.5em
        text-align center

        svg
            margin auto

    &__link
        display block
        padding 2.4166em 0
