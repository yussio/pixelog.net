.aside
    display grid
    align-self start
    gap 60px
    +media(tabsp)
        padding 0 16px
        grid-template-columns repeat(auto-fit, minmax(260px, 1fr))
        gap 50px


    &__title
        display block
        text-align center
        letter-spacing .1em
        text-transform uppercase
        color var(--text-sub-color)

        &::after
            content ""
            display block
            width 30px
            height 3px
            margin 20px auto
            background var(--border-color)
            border-radius 3px


    &__ad
        grid-column 1/-1
        overflow hidden
        +media(tabsp)
            order 1
