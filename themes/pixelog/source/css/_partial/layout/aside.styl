aside > div:not(:last-of-type)
    margin 0 0 60px 0

.widget
    &__title
        display block
        margin 0 0 24px 0
        text-align center
        font-size 18px
        letter-spacing .05em
        color var(--text-color)
        position relative

        &::after
            content ""
            display block
            width 100%
            height 3px
            background var(--background-dark-color)
            border-radius 3px
            position absolute
            left 0
            top calc(50% - 1.5px)
            z-index -1

    &__title-inner
        padding 0 .5em
        background var(--background-color)


$aside-list
    margin 0 6px
    list-style none
    font-size 15px

    &-link
        text-decoration none
        color var(--text-link-color)
        border-bottom 1px dotted var(--border-dotted-color)
        transition .1s opacity ease-in-out

        &:hover
            color var(--text-hover-color)


.category-list
    @extend $aside-list

    &-item
        position relative

    &-link
        display block
        line-height 44px
        padding 0 4px

        &.current
            background var(--background-current-color)
            font-weight bold
            color var(--text-accent-color)

    &-child
        list-style none

        & .category-list-item
            & .category-list-link
                padding 0 0 0 2.5em

            & .category-list-child  .category-list-link
                padding 0 0 0 5em


    &-count
        line-height 44px
        color var(--text-sub-color)
        font-size 14px
        position absolute
        top 0
        right 4px
        pointer-events none

        &::before
            content "["
        &::after
            content "]"


.recent-posts-list
    @extend $aside-list

    &-link
        display block
        padding 10px 0
