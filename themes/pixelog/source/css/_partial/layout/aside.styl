.widget
    &__title
        margin 0 0 24px 0
        line-height 50px
        background var(--background-dark-color)
        color #fff
        text-align center
        border-radius 4px
        font-size 18px
        letter-spacing 0.1em
        box-shadow 0 2px 10px rgba(0,0,0,.05), 0 0 1px rgba(0,0,0,.1)
        position relative

        &::after
            content ""
            display block
            border 10px solid transparent
            border-top 10px solid var(--background-dark-color)
            position absolute
            left calc(50% - 10px)
            bottom -20px


    &__ad
        margin 0 0 60px 0

    &__category
        margin 0 0 60px 0

        &--sticky
            @extend .widget__category



$aside-list
    margin 0 6px
    list-style none
    font-size 15px

    &-link
        text-decoration none
        color var(--text-link-color)
        border-bottom 1px dotted #bbb
        transition .1s opacity ease-in-out

        &:hover
            color var(--text-hover-color)


.category-list
    @extend $aside-list

    &-item
        position relative

    &-link
        display block
        line-height 44px
        padding 0 4px

        &.current
            background var(--background-current-color)
            font-weight bold
            color var(--text-accent-color)

    &-child
        list-style none

        & .category-list-item
            & .category-list-link
                padding 0 0 0 2em

            & .category-list-child  .category-list-link
                padding 0 0 0 4em


    &-count
        line-height 44px
        color var(--text-sub-color)
        position absolute
        top 0
        right 4px
        pointer-events none

        &::before
            content "["
        &::after
            content "]"


.recent-posts-list
    @extend $aside-list

    &-link
        display block
        padding 10px 0
