aside > div:not(:last-of-type)
    margin 0 0 60px 0

.widget
    &__title
        display block
        margin 0 0 16px 0
        text-align center
        letter-spacing .1em
        text-transform uppercase
        color var(--text-accent-color)

        &::after
            content ""
            display block
            width 30px
            height 3px
            margin 16px auto
            background var(--border-color)
            border-radius 3px



$aside-list
    list-style none
    font-size 15px

    &-link
        text-decoration none
        color var(--text-link-color)
        border-bottom 1px solid var(--border-color)
        transition .1s opacity ease-in-out

        &:hover
            color var(--text-hover-color)


.category-list
    @extend $aside-list

    &-item
        position relative

    &-link
        display block
        line-height 44px
        padding 0 4px

        &.current
            background var(--background-current-color)
            font-weight bold

    &-child
        list-style none

        & .category-list-item
            & .category-list-link
                padding 0 0 0 2.5em

            & .category-list-child  .category-list-link
                padding 0 0 0 5em


    &-count
        line-height 44px
        color var(--text-sub-color)
        font-size 14px
        position absolute
        top 0
        right 4px
        pointer-events none

        &::before
            content "["
        &::after
            content "]"


.recent-posts-list
    @extend $aside-list

    &-link
        display block
        padding 10px 0
