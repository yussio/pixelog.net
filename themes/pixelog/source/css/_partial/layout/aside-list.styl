$aside-list
    list-style none
    font-size 15px

    &-link
        display block
        padding 11px 4px
        word-break break-all
        border-bottom 1px solid var(--border-color)

        &:hover
            color var(--text-hover-color)


.category-list
    @extend $aside-list

    &-link
        &.current
            background var(--bg-current-color)
            font-weight bold

    &-child
        list-style none

        & .category-list-link
            padding-left 2.5em

        & .category-list-child  .category-list-link
            padding-left 5em


    &-count
        color var(--text-sub-color)
        font-size 14px
        font-weight normal
        float right

        &::before
            content "["
        &::after
            content "]"


.recent-posts-list
    @extend $aside-list
