$aside-list
    list-style none
    font-size 15px

    &-link
        border-bottom 1px solid var(--border-color)
        transition .15s color ease-out

        &:hover
            color var(--text-hover-color)


.category-list
    @extend $aside-list

    &-item
        position relative

    &-link
        display block
        line-height 44px
        padding 0 4px

        &.current
            background var(--background-current-color)
            font-weight bold

    &-child
        list-style none

        & .category-list-link
            padding 0 0 0 2.5em

        & .category-list-child  .category-list-link
            padding 0 0 0 5em


    &-count
        line-height 44px
        color var(--text-sub-color)
        font-size 14px
        position absolute
        top 0
        right 4px
        pointer-events none

        &::before
            content "["
        &::after
            content "]"


.recent-posts-list
    @extend $aside-list

    &-link
        display block
        padding 10px 0
