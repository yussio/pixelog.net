.dropdown
    margin 0 0 0 auto
    position relative

    &__btn
        display block
        width 1.5em
        padding .2em

        &.is-open
            &::after
                content ""
                width 100%
                height 100%
                cursor default
                position fixed
                top 0
                left 0
                z-index 9

            & + .dropdown__body
                display block
                z-index 10

    &__body
        display none
        width 250px
        background var(--bg-sub-color)
        box-shadow 0 1px 5px 0 rgba(0,0,0,.2)
        box-shadow 0 2px 6px 2px rgba(60,64,67,0.149), 0 1px 2px 0 rgba(60,64,67,0.302)
        border-radius 4px
        position absolute
        top 32px
        right 0


    &__label
        padding .9em 1em .5em
        color var(--text-sub-color)
        font-size .75em

    &__list
        &:not(:last-of-type)
            border-bottom 1px solid var(--border-color)

    &__item
        display block

    &__item-link
        display block
        padding 1em 1.2em
        font-size .95em
        transition .15s background ease-out

        &:hover
            background var(--bg-hover-color)
