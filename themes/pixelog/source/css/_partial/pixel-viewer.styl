.content img
    cursor zoom-in

#pixel-viewer
    display flex
    flex-direction column
    width 100%
    height 100%
    background rgba(0, 0, 0, .9)
    position fixed
    top 0
    left: 0
    z-index 10
    animation .2s fadein ease-in-out
    cursor pointer
    user-select none

    &.fadeout
        animation .2s fadeout ease-in-out

        & #pixel-viewer__img
            animation .2s scaledown ease-in-out


#pixel-viewer__alt
    width: 100%
    height 44px
    line-height 44px
    padding 0 48px 0 12px
    background rgba(0, 0, 0, .95)
    color #ddd
    font-size 14px
    text-overflow ellipsis
    white-space nowrap
    overflow hidden

    &::before
    &::after
        content ""
        dispaly block
        width 24px
        height 3px
        background #ddd
        border-radius 4px
        position fixed
        top 20px
        right 12px
        z-index 12
    &::before
        transform rotate(45deg)
    &::after
        transform rotate(-45deg)

#pixel-viewer__img
    display block
    margin auto
    max-width 100%
    max-height calc(100% - 44px)
    animation .2s scaleup ease-in-out


@keyframes fadein
    from
        opacity 0
    to
        opacity 1

@keyframes scaleup
    from
        transform scale(.95)
    to
        transform scale(1)

@keyframes fadeout
    from
        opacity 1
    to
        opacity 0

@keyframes scaledown
    from
        transform scale(1)
    to
        transform scale(.95)
