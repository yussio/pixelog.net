.header
    margin 0 0 80px 0
    background linear-gradient(to right, rgb(72, 169, 166), rgb(63, 191, 187))
    background var(--theme-color)
    box-shadow 0 0 20px 0 rgba(0,0,0,.05)
    position relative

    +media(tabsp)
      margin 0 0 16px 0

    &__inner
        display flex
        justify-content flex-end
        width pc-width
        margin auto
        padding 16px 0
        line-height 50px
        position relative
        z-index 2
        +media(tabsp)
            width 96%
        +media(sp)
            flex-direction column

    &__logo
        height 55px
        margin 0 auto 0 0
        +media(sp)
            margin auto

    svg
        position relative
        top 8px


#particles-js
    canvas
        position absolute
        top 0
        left 0
        z-index 1


.switch
  display flex
  height 24px
  margin 0 52px 0 0
  align-self center
  +media(sp)
      margin 24px auto 6px

  &__name
      height 24px
      line-height 24px
      margin 0 16px 0 0
      font-size 12px
      color #fff
      align-self center

  &__label
      display inline-block
      position relative
      width 58px
      height 24px
      background #ccc
      border-radius 46px
      transition .2s all ease
      cursor pointer
      align-self center

      &::after
          content ''
          position absolute
          width 24px
          height 24px
          border-radius 50%
          background #fff
          box-shadow 0 0 5px rgba(0, 0, 0, 0.2)
          transition .2s all ease
          top 0
          left 0
          z-index 2

  &__input
      display none

      &:checked
          & + .switch__label
              background var(--text-accent-color)

              &::after
                  left 34px

.search-form
    width 300px
    line-height 48px
    position relative
    align-self center
    +media(sp)
        display none

    &__input
        width 100%
        padding 0 48px 0 16px
        outline none
        color #eee
        font-size 14px
        background rgba(0, 0, 0, .18)
        background rgba(255, 255, 255, .3)
        transition .1s all ease-in-out
        border-radius 3px

        &:focus
            color #333
            background #fff


    &__btn
        width 18px
        height 20px
        margin 8px 6px
        padding 16px
        position absolute
        top 0
        right 0
        color #ddd
        font-size 13px

        &::before
        &::after
            content ""
            display block
            position absolute
            transition .1s all ease-in-out

        &::before
            width 14px
            height 14px
            border 2px solid #f2f2f2
            border-radius 50%
            top 7px
            left 6px

        &::after
            width 2px
            height 10px
            background #f2f2f2
            transform rotate(-45deg)
            top 17px
            left 20px

  .search-form__input:focus + .search-form__btn
      &::before
          border-color #aaa
      &::after
          background #aaa
