.alert
    --text-blue-color #004085
    --text-yellow-color #856404
    --text-red-color #721c24
    --border-blue-color #b8daff
    --border-yellow-color #ffeeba
    --border-red-color #f5c6cb
    --bg-blue-color #cce5ff
    --bg-yellow-color #fff3cd
    --bg-red-color #f8d7da
    margin 2em 0
    padding .75em 1.25em
    font-size .9em
    border 1px solid
    border-radius 4px

    &.notice
        color var(--text-blue-color)
        background var(--bg-blue-color)
        border-color var(--border-blue-color)

    &.caution
        color var(--text-yellow-color)
        background var(--bg-yellow-color)
        border-color var(--border-yellow-color)

    &.warning
        color var(--text-red-color)
        background var(--bg-red-color)
        border-color var(--border-red-color)


[data-mode='dark'] .alert
    --text-blue-color #9ed2ff
    --text-yellow-color #ffdd9e
    --text-red-color #ff8080

    --border-blue-color #004e66
    --border-yellow-color #665500
    --border-red-color #5c0000

    --bg-blue-color #002333
    --bg-yellow-color #332b00
    --bg-red-color #290000
