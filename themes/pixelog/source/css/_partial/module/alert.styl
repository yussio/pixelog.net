.alert
    margin-top var(--space-default)
    padding .75em 1.25em
    font-size .9em
    border 1px solid
    border-radius 4px

    &.notice
        background #cce5ff
        border-color #b8daff
        color #004085

    &.caution
        background #fff3cd
        border-color #ffeeba
        color #856404

    &.warning
        background #f8d7da
        border-color #f5c6cb
        color #721c24
