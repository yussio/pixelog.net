.hljs
    padding calc(36px + 1.5em) 2em 1.5em
    font-size 16px
    font-family Consolas,Monaco,'Andale Mono','Ubuntu Mono',monospace
    line-height 1.5
    border-radius 4px
    --code "</> "

    &::before
        display block
        width 100%
        line-height 36px
        padding 0 16px
        font-size 14px
        border-bottom 2px groove rgba(90, 94, 102, 1)
        position absolute
        top 0
        left 0

    &.css::before
        content var(--code) "CSS"

    &.html::before
        content var(--code) "HTML"

    &.javascript::before
        content var(--code) "JavaScript"

    &.stylus::before
        content var(--code) "Stylus"

    &.bash::before
        content var(--code) "Bash"

    &.yml::before
        content var(--code) "yml"

    &.ejs::before
        content var(--code) "EJS"

    &.plaintext
        padding 1.5em 2em

    &::-webkit-scrollbar
        height 8px

    &::-webkit-scrollbar-thumb
        background #bbb
        border-radius 3px

    &::-webkit-scrollbar-thumb:active
        background #888
