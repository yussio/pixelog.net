.pager
    display flex
    justify-content space-between
    margin 16px 0 16px 0
    background var(--background-sub-color)
    box-shadow 0 2px 10px rgba(0,0,0,.05), 0 0 1px rgba(0,0,0,.1)
    border-radius 4px
    user-select none

    &__prev
    &__next
        display block
        width 160px
        line-height 56px
        text-decoration none
        color var(--text-accent-color)
        font-size 17px
        font-weight bold
        text-align center
        transition .2s background ease

        +media(sp)
            width 120px
            font-size 16px

        +media(spm)
            width 80px
            font-size 15px

    &__prev:hover
    &__next:hover
        background var(--background-hover-color)

    &__prev::before
    &__next::after
        display inline-block
        font 17px "Consolas", monospace
        transition .2s transform ease

    &__prev
        border-right 1px solid var(--border-color)

        &::before
            content "<"
            margin 0 3px 0 0

        &:hover::before
            transform translateX(-4px)

    &__next
        border-left 1px solid var(--border-color)

        &::after
            content ">"
            margin 0 0 0 3px

        &:hover::after
            transform translateX(4px)


.disabled
    pointer-events none
    color var(--text-disabled-color)
    font-weight normal


.pager__number
    height 36px
    line-height 34px
    color var(--text-color)
    align-self center

    +media(sp)
        font-size 15px

.pager__select
    display inline-block
    margin 0 12px 0 0
    border 1px solid #bbb
    position relative
    background var(--background-sub-color)
    border-radius 4px

    &::after
        display block
        content ">"
        pointer-events none
        font 17px "Consolas", monospace
        color #bbb
        transform rotate(90deg)
        position absolute
        top 8px
        right 8px

    &-form
        padding 0 48px 0 24px
        cursor pointer
        color var(--text-color)

        & option
            color #000
