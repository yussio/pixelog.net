.nav
    width 20em
    max-width 75%
    height 100%
    background #fff
    font-size var(--size-s1)
    overflow auto
    position fixed
    top 0
    left -20em
    transition .2s all ease
    z-index 4

    &.is-open
        left 0

    &:focus
        outline none

    &__list
        list-style none

    &__link
        display block
        padding .9em 1.5em
        border-bottom 1px solid var(--border-color)
                
#js-overlay
    width 100%
    height 100%
    background rgba(0, 0, 0, .6)
    opacity 0
    pointer-events none
    transition .2s opacity ease
    position fixed
    top 0
    left 0
    z-index 3

    &.is-open
        opacity 1
        pointer-events auto