.nav
    width 25em
    max-width 75%
    height 100%
    padding 1.5em
    background #fff
    font-size var(--size-s1)
    overflow auto
    position fixed
    top 0
    left -25em
    transition .2s all ease
    z-index 4

    &.is-open
        left 0

    &:focus
        outline none

                
#js-overlay
    width 100%
    height 100%
    background rgba(0, 0, 0, .6)
    opacity 0
    pointer-events none
    backdrop-filter blur(2px) saturate(1.5)
    transition .2s opacity ease
    position fixed
    top 0
    left 0
    z-index 3

    &.is-open
        opacity 1
        pointer-events auto