@font-face {
  font-family: "YuGothic M";
  src: local("Yu Gothic Medium"),
       local("Yu Gothic");
  font-weight: 500;
       /*
         Chrome 58.0.3029.110 (64-bit) では
         "Yu Gothic Medium" を認識しないバグあるため
         "Yu Gothic" と font-weight も併せて指定。
       */
}


body
    color var(--text-color)
    background var(--bg-sub-color)
    font-family: "游ゴシック体", YuGothic, "YuGothic M", sans-serif;
    font-size clamp(100%, calc((100vw - 42em)*0.004 + 100%), 112%);

a
    color inherit
    text-decoration none

p
    margin var(--space)

img
svg
    max-width 100%
    vertical-align middle

blockquote
    margin var(--space)
    padding 0 1.272em
    color var(--text-sub-color)
    font-size var(--size-s1)
    border-left .25em solid var(--border-color)

li>ul
    margin 0!important

code
pre
    font-family consolas, Menlo, monospace

code:not(.hljs)
    margin 0 .5em
    padding 3px 10px
    background var(--bg-color)
    font-size var(--size-s1)
    border-radius: 3px


select
    padding .25em .75rem
    color var(--text-color)
    background var(--bg-sub-color)
    border 1px solid var(--border-dark-color)
    border-radius .25em
    -moz-appearance menulist-button
    -webkit-appearance menulist-button
    appearance menulist-button


table
    width 100%
    margin var(--space)
    font-size 15px
    word-break break-all
    border-collapse collapse

th
    padding 6px
    text-align center
    border 1px solid var(--border-color)
    background var(--bg-color)

td
    padding 6px 12px
    border 1px solid var(--border-color)

hr
    width 2em
    margin 3em 0
    border 0
    border-top .25em solid var(--border-color)

::selection
    background #b3d4fc
    color #000
