.aside-list
    width 100%
    list-style none

    &-link
        display block
        padding .8em 0
        border-bottom 1px solid var(--border-color)
        word-break break-all

        &:hover
            color var(--text-hover-color)

        &.current
            background var(--bg-current-color)
            font-weight bold

    &-child
        list-style none

        & .aside-list-link
            padding-left 2em

        & .aside-list-child  .aside-list-link
            padding-left 4em


    &-count
        color var(--text-sub-color)
        font-weight normal
        float right

        &::before
            content "["
            padding-right .1em

        &::after
            content "]"
            padding-left .1em
