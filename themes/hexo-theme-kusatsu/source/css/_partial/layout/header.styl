.header
    background url(/img/header.webp), var(--theme-color)
    background-size cover


    &__link
        display block
        padding 7em 0
        color #fff
        text-align center
        +media(sp)
            padding 4em 0


    &__logo // h1のデフォルトfont-sizeを上書きするため
        font-size var(--size-l4)
        font-weight 600
        text-shadow 1px 1px 4px rgba(34,34,34,0.25)


    &__desc
        font-size var(--size-s2)
