.widget
    font-size var(--size-s1)

    &__title
        margin 0 0 1em 0
        color var(--text-sub-color)
        font-size var(--size-l1)
        letter-spacing 1px


        &::after
            content ""
            display block
            width .75em
            height 2px
            background var(--theme-color)


        &:first-letter
            color var(--theme-color)


