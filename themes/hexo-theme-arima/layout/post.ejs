<article class="post">
    <header class="post__header">
        <h1 class="post__title"><%- page.title || "Untitled" %></h1>
        <div class="post__meta">
            <div class="post__date">
                <time class="post__published" datetime="<%- page.date.format() %>">
                  <%- page.date.format(config.date_format) %>
                </time>
                <% if (page.updated) {%>
                    <time class="post__updated" datetime="<%- page.updated.format() %>">
                      <%- '('+page.updated.format(config.date_format) + '更新)' %>
                    </time>
                <% } %>
            </div>
            <ul class="post-category">
              <% page.categories.forEach(function(item){ %>
                <li class="post-category__item">
                  <a class="post-category__link" href="<%= url_for(item.path) %>">
                    <%= item.name %>
                  </a>
                </li>
              <% }) %>
            </ul>
        </div>
    </header>
    <div class="post__content"><%- page.content %></div>
    <footer class="post__footer">
        <% if (page.tags.length > 0) { %>
        <ul class="post-tag">
          <% page.tags.forEach(function(item){ %>
          <li class="post-tag__item">
            <a class="post-tag__link" href="<%= url_for(item.path) %>">
              <%= item.name %>
            </a>
          </li>
          <% }) %>
        </ul>
        <% } %>
        <div class="post__ad">
            <!-- 記事下広告 -->
            <ins class="adsbygoogle"
                 style="display:block"
                 data-ad-client="ca-pub-9027963984337121"
                 data-ad-slot="4141857270"
                 data-ad-format="auto"
                 data-full-width-responsive="true"></ins>
            <script>
                 (adsbygoogle = window.adsbygoogle || []).push({});
            </script>
        </div>
    </footer>
</article>
