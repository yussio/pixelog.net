pc-width = 1200px
sp-width = 767px

font-size-l3 = 1em * 9 / 6 // 1.5
font-size-l2 = 1em * 9 / 7 // 1.285
font-size-l1 = 1em * 9 / 8 // 1.125
font-size-m =  1em * 9 / 9
font-size-s1 = 1em * 9 / 10 // .9
font-size-s2 = 1em * 9 / 11 // .8181
font-size-s3 = 1em * 9 / 12 // .75



:root
  --theme-color #5aa096

  --bg-color #fafafa
  --bg-sub-color #fff
  --bg-hover-color #fbfbfb
  --bg-current-color #eaeaea

  --text-color #444
  --text-link-color #3884FF
  --text-hover-color #888
  --text-sub-color #717171
  --text-accent-color var(--theme-color)
  --text-disabled-color #eee
  --text-light-color #fff
  --text-light-sub-color rgba(255,255,255,.6)

  --border-color #e3e3e3
  --border-dotted-color #bbb

  --space-small .786em 0
  --space-default 1.618em 0
  --space-large 2.618em 0 1.272em 0

  --container-shadow 0 0.2px 0.2px rgba(0, 0, 0, 0.006), 0 0.4px 0.6px rgba(0, 0, 0, 0.008), 0 0.8px 1.1px rgba(0, 0, 0, 0.01), 0 1.3px 2px rgba(0, 0, 0, 0.012), 0 2.5px 3.8px rgba(0, 0, 0, 0.014), 0 6px 9px rgba(0, 0, 0, 0.02)
