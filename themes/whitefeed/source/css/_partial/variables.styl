:root
  --width 700px
  --theme-color #5aa096

  --bg-color #f8f8f8
  --bg-sub-color #fdfdfd
  --bg-hover-color #f2f2f2

  --text-color #444
  --text-link-color #3884FF
  --text-hover-color var(--theme-color)
  --text-sub-color #757575
  --text-disabled-color #eee

  --border-color #e3e3e3
  --border-dark-color #bbb

  --space-s .75em 0
  --space 2em 0
  --space-l 3em 0 1em 0

  --num 8
  --size-l3 calc(var(--num) * 1em / (var(--num) - 3)) // 1.6
  --size-l2 calc(var(--num) * 1em / (var(--num) - 2)) // 1.333
  --size-l1 calc(var(--num) * 1em / (var(--num) - 1)) // 1.142
  --size-s1 calc(var(--num) * 1em / (var(--num) + 1)) // .888
  --size-s2 calc(var(--num) * 1em / (var(--num) + 2)) // .8
  --size-s3 calc(var(--num) * 1em / (var(--num) + 3)) // .727


@media (prefers-color-scheme: dark)
  :root
    --theme-color #5aa096

    --bg-color #171717
    --bg-sub-color #1c1c1c
    --bg-hover-color #111

    --text-color #dedede
    --text-link-color #8ab4f8
    --text-hover-color var(--theme-color)
    --text-sub-color #a8a8a8
    --text-disabled-color #444

    --border-color #4a4a4a
    --border-dark-color #777
