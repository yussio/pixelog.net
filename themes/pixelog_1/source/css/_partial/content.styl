.content
  font-size: 16px
  line-height: 1.9
  text-align: justify
  color: #333
  letter-spacing: .01em

  p
    margin: 1.5em 0

  img
    max-width: 100%

    +media(sp)
        max-width: calc(100% + 32px)
        margin-left: -16px


  h2
    margin: 2.5em 0 1.2em 0
    color: #333
    border-bottom: 1px solid #bbb
    line-height: 2

  h3
    font-size: 120%
    margin: 2.5em 0 1.2em 0
    color: #555

  ul
  ol
    margin: 0 0 0 24px

  li
    margin-bottom: .3em


  table
    margin: 40px 0

  th
    text-align: center

  td
    padding: 10px

  .vertical-img
    max-width: 400px

code
    margin: .5em
    padding: 3px
    background: #f2f2f2
    box-shadow: 1px 1px 1px 0 #ddd

pre
    position: relative

.hljs
    margin: 8px 0
    padding: 48px 2em 2em 2em;
    font-size: .8em
    font-family: Consolas,Monaco,'Andale Mono','Ubuntu Mono',monospace
    line-height: 1.5

    &::before
        display: block
        padding: 0 16px
        position: absolute
        top: 0
        left: 0
        font-size: 18px

    &.css::before
        content: "CSS"
        background: #3696d1
        color: #fff

    &.html::before
        content: "HTML"
        background: #eb6129
        color: #fff

    &.javascript::before
        content: "JavaScript"
        background: #f8d43c
        color: #fff

    &.stylus::before
        content: "Stylus"
        background: #b5d202
        color: #fff

    &.bash::before
        content: "Bash"
        background: #ddd
        color: #333

    &.plaintext
        padding: 2em

    &::-webkit-scrollbar
        height: 8px

    &::-webkit-scrollbar-thumb
        background: #aaa

    &::-webkit-scrollbar-thumb:active
        background:#777


.center
  text-align: center

.marker
  background: linear-gradient(transparent 40%, #66FFCC 40%)



.btn
  display: inline-block
  background: #3F51B5
  color: #fff
  text-decoration: none
  padding: 10px 20px
  box-sizing: border-box
  line-height: 30px
  border-radius: 3px
  box-shadow: 1px 1px 3px #aaa
  margin: 10px 0

  &:hover
    opacity: 1
    color: #fff

  &:active
    background: #5C6BC0


.red-box
    border: 1px solid #f44336
    margin: 20px 0
    padding: 16px
    color:#f44336
    font-size: 14px
    border-radius: 4px


.gray-box
  margin: 1em 0
  padding: 12px
  background: #f5f5f5
  border-radius: 2px
  overflow-wrap: break-word



blockquote
  position: relative
  margin: 0
  padding:30px
  border: 0
  font-size: .9em
  background: #f1f1f1
  z-index: 2
  font-family: "ヒラギノ角ゴ Pro W3","Hiragino Kaku Gothic Pro","ＭＳ Ｐゴシック","MS PGothic",sans-serif


  &:before
  &:after
  	position: absolute
  	font-size: 1000%
  	color: #d3d3d3
  	font-family: 'TImes NEw ROman',"ＭＳ Ｐゴシック",sans-serif
  	z-index: -1


  &:before
  	content: "“"
  	line-height: 0.8em
  	top: 10px
  	left: 10px

  &:after
  	content: "”"
  	line-height: 0em
  	right: 10px
  	bottom: 5px

hr
    margin:50px auto
    border:none
    border-top:1px solid #ddd
    width:200px

.shake
    display: inline-block
    animation: shake .2s infinite


@keyframes shake {
  0% {transform: translate(0px, 0px) rotateZ(0deg)}
  25% {transform: translate(2px, 2px) rotateZ(1deg)}
  50% {transform: translate(0px, 2px) rotateZ(0deg)}
  75% {transform: translate(2px, 0px) rotateZ(-1deg)}
  100% {transform: translate(0px, 0px) rotateZ(0deg)}
}


