.breadcrumb
    margin: 0 0 16px 0
    padding: 0 16px
    line-height: 56px
    background: #fff
    font-size: 14px
    box-shadow: 0 4px 10px rgba(0,0,0,0.05), 0 0 1px rgba(0,0,0,0.1);

    &__list
        display: flex
        list-style: none

    &__item
        position: relative
        margin: 0 48px 0 0
        flex-shrink: 0

        &:not(:last-child)

            &::before
                content: ""
                display: block
                width: 0
                height: 0
                border: 28px solid transparent
                border-left: 16px solid #fff
                position: absolute
                top: 0
                right: -57px
                z-index: 2

            &::after
                content: ""
                display: block
                width: 0
                height: 0
                border: 28px solid transparent
                border-left: 16px solid #ddd
                position: absolute
                top: 0
                right: -58px
                z-index: 1

          &:last-child
              width: 100%
              margin: 0
              flex-shrink: 1
              text-overflow: ellipsis
              white-space: nowrap
              overflow: hidden
              font-weight: bold

              & > a
                  text-decoration: none
                  pointer-events: none

        &-link
            color: #555

            &[href*="page"]
                text-decoration: none
                pointer-events: none




