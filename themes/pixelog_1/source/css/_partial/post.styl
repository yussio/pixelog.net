.post
    padding: 40px
    background: #fff
    box-shadow: 0 4px 10px rgba(0,0,0,0.05), 0 0 1px rgba(0,0,0,0.1);
    border-radius: 4px
    +media(sp)
      padding: 32px 16px


.post-header
    &__title
        margin: 0 0 1.2em 0
        font-size: 32px
        +media(sp)
            font-size: 24px

        &-link
            color: #333
            text-decoration: none

    &__meta
        margin: 0 0 1em 0
        font-size: 14px
        color: #888
