.pager
    display: flex
    justify-content: space-between
    margin: 16px 0 16px 0
    background: #fff
    box-shadow: 0 4px 10px rgba(0,0,0,.05), 0 0 1px rgba(0,0,0,.1);
    border-radius: 4px

    &__prev
    &__next
        display: block
        width: 120px
        line-height: 56px
        padding: 0 12px
        text-decoration: none
        color: theme-color
        font-size: 15px
        font-weight: bold
        text-align: center
        transition: .2s all ease

    &__prev:hover
    &__next:hover
        background: #f9f9f9

    &__prev::before
    &__next::after
        display: inline-block
        font: 17px "Consolas", monospace
        transition: .2s transform ease

    &__prev
        border-right: 1px solid #ddd

        &::before
            content: "<"
            margin: 0 3px 0 0

        &:hover::before
            transform: translateX(-4px)

    &__next
        border-left: 1px solid #ddd

        &::after
            content: ">"
            margin: 0 0 0 3px

        &:hover::after
            transform: translateX(4px)


.disabled
    pointer-events: none
    color: #eee
    font-weight: normal


.pager__number
    height: 36px
    line-height: 34px
    align-self: center


.pager__select
    display: inline-block
    margin: 0 12px 0 0
    border: 1px solid #bbb
    position: relative
    background: #fff
    border-radius: 4px

    &::after
        display: block
        content: ">"
        pointer-events: none
        font: 17px "Consolas", monospace;
        color: #bbb
        transform: rotate(90deg)
        position: absolute
        top: 8px
        right: 8px

    &-form
        padding: 0 48px 0 24px;
        cursor: pointer


option
  box-shadow 2px 2px 2px 2px #aaa
