@charset "utf-8";
@import "nib"
@import "_bass/variables"

global-reset()

input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

@font-face
  font-family: FontAwesome
  font-style: normal
  font-weight: normal
  src: url(font-icon-path + ".eot?v=#" + font-icon-version)
  src: url(font-icon-path + ".eot?#iefix&v=#" + font-icon-version) format("embedded-opentype"),
       url(font-icon-path + ".woff?v=#" + font-icon-version) format("woff"),
       url(font-icon-path + ".ttf?v=#" + font-icon-version) format("truetype"),
       url(font-icon-path + ".svg#fontawesomeregular?v=#" + font-icon-version) format("svg")

body
  background: color-background
  color: color-default
  font: font-size font-sans
  text-rendering: optimizelegibility
  -webkit-text-size-adjust: 100%
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

@import "_bass/bass"
@import "_bass/syntax"
@import "_partial/header"
@import "_partial/article"
@import "_partial/article-gallery"
@import "_partial/article-nav"
@import "_partial/archive"
@import "_partial/footer"
@import "_partial/rwd"



/* 勝手にカスタマイズ */

.entry-content {
    font-size: 105%;
    line-height: 2em;
    margin-bottom: 2em;
    text-align: justify;
    letter-spacing: .01em;
}

.entry-content p {
    margin: 1em 0;
}

.entry-content h2 {
    margin: 60px 0 40px 0;
    color: #555;
    border-bottom: 1px solid #bbb;
    line-height: 2;
}

.entry-content h3 {
    font-size: 120%;
    margin: 40px 0 30px 0;
    color: #555;
}

.entry-content li {
    margin-bottom: .3em;
}

figure.highlight {
    margin: 30px 0;
}

.entry-content code {
    margin: 0 8px;
    padding: 4px;
    background: #eee;
    font-size: .8em;
}

.entry-content table {
    margin: 40px 0;
}

.entry-content th {
    text-align: center;
}

.entry-content td {
    padding: 10px;
}


.entry-content .vertical-img
  max-width: 400px


/*記事内装飾 */

.center{
    text-align:center;
}

.marker{
	/*background:linear-gradient(transparent 40%, #ffcccc 40%) */
        background: linear-gradient(transparent 40%, #66FFCC 40%)
}


.btn {
    display: inline-block;
    background: #3F51B5;
    color: #fff;
    text-decoration: none!important;
    padding: 10px 20px;
    box-sizing: border-box;
    line-height: 30px;
    border-radius: 3px;
    box-shadow: 1px 1px 3px #aaa;
    margin: 10px 0;
}

.btn:hover {
    opacity: 1;
    color: #fff;
}

.btn:active {
    background: #5C6BC0;
}


.red-box {
    border: 1px solid #f44336;
    margin: 20px 0;
    padding: 16px;
    color:#f44336;
    font-size: 14px;
    border-radius: 4px;
}

.gray-box {
  margin: 1em 0;
  padding: 12px;
  background: #f5f5f5;
  border-radius: 2px;
}

blockquote{
     position:relative;
     margin:0;
     padding:30px;
     border: 0;
     font-size: .9em;
     background:#f1f1f1;
     z-index:2;
       font-family: "ヒラギノ角ゴ Pro W3","Hiragino Kaku Gothic Pro","ＭＳ Ｐゴシック","MS PGothic",sans-serif;
}
blockquote:before,
blockquote:after {
	position:absolute;
	font-size:1000%;
	color:#d3d3d3;
	font-family:'TImes NEw ROman',"ＭＳ Ｐゴシック",sans-serif;
	z-index:-1;
}
blockquote:before{
	content:"“";
	line-height:0.8em;
	top:10px;
	left:10px;
}
blockquote:after{
	content:"”";
	line-height:0em;
	right:10px;
	bottom:5px;
}


.shake{
  display: inline-block;
	-webkit-animation:shake .1s infinite alternate;
	animation:shake .1s infinite alternate;
}

hr{
	margin:50px auto;
	border:none;
	border-top:1px solid #ddd;
	width:200px;
}

@keyframes shake {
    0% {transform: translate(0px, 0px) rotateZ(0deg)}
    25% {transform: translate(2px, 2px) rotateZ(1deg)}
    50% {transform: translate(0px, 2px) rotateZ(0deg)}
    75% {transform: translate(2px, 0px) rotateZ(-1deg)}
    100% {transform: translate(0px, 0px) rotateZ(0deg)}
}


