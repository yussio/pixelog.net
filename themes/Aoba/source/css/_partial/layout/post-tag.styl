.post-tag
    margin-top var(--space-large)
    font-size .85em

    &__list
        display flex
        flex-wrap wrap
        list-style none

    &__link
        display block
        margin .5em 1em 0 0
        padding .5em 1em
        border 1px solid var(--border-color)
        border-radius 20px

        &:hover
            background var(--bg-hover-color)
