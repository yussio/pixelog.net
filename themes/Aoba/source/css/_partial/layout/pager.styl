.pager
    display flex
    margin 16px 0 0 0
    background var(--bg-sub-color)
    font-size font-size-l1
    box-shadow var(--container-shadow)
    border-radius 4px
    justify-content space-between

    &__btn
        display block
        flex-basis 200px
        line-height 56px
        color var(--text-accent-color)
        font-weight bold
        text-align center
        transition .15s background ease

        &:hover
            background var(--bg-hover-color)

        &::before
        &::after
            display inline-block
            font 17px "Consolas", monospace
            transition .15s transform ease-out

        &.disabled
            color var(--text-disabled-color)
            cursor not-allowed

            &:hover
                background none

        &.prev
            border-right 1px solid var(--border-color)

            &::before
                content "<"
                margin 0 6px 0 0

            &:hover::before
                transform translateX(-4px)

        &.next
            border-left 1px solid var(--border-color)

            &::after
                content ">"
                margin 0 0 0 6px

            &:hover::after
                transform translateX(4px)


    &__number
        display flex
        padding 12px 16px
        font-size font-size-s1
        flex-shrink 0

    &__current
        width 80px
        border 1px solid var(--border-dotted-color)

    &__total
          margin 0 0 0 12px
          align-self center
