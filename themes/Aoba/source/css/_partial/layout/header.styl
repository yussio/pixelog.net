.header
    &::before
        content ""
        display block
        width 100%
        height 100%
        background linear-gradient(216deg,rgba(77,77,77,.05) 0,rgba(77,77,77,.05) 25%,rgba(42,42,42,.05) 25%,rgba(42,42,42,.05) 38%,rgba(223,223,223,.05) 38%,rgba(223,223,223,.05) 75%,rgba(36,36,36,.05) 75%,rgba(36,36,36,.05) 100%),linear-gradient(44deg,rgba(128,128,128,.05) 0,rgba(128,128,128,.05) 34%,rgba(212,212,212,.05) 34%,rgba(212,212,212,.05) 57%,rgba(25,25,25,.05) 57%,rgba(25,25,25,.05) 89%,rgba(135,135,135,.05) 89%,rgba(135,135,135,.05) 100%),linear-gradient(241deg,rgba(55,55,55,.05) 0,rgba(55,55,55,.05) 14%,rgba(209,209,209,.05) 14%,rgba(209,209,209,.05) 60%,rgba(245,245,245,.05) 60%,rgba(245,245,245,.05) 69%,rgba(164,164,164,.05) 69%,rgba(164,164,164,.05) 100%),linear-gradient(249deg,rgba(248,248,248,.05) 0,rgba(248,248,248,.05) 32%,rgba(148,148,148,.05) 32%,rgba(148,148,148,.05) 35%,rgba(202,202,202,.05) 35%,rgba(202,202,202,.05) 51%,rgba(181,181,181,.05) 51%,rgba(181,181,181,.05) 100%),var(--theme-color)
        position fixed
        z-index -1


    &__logo // h1のデフォルトfont-sizeを上書きするため
        font-size clamp(16px, calc((100vw - 400px) * 0.01 + 100%), 24px)


    &__svg
        margin auto
        color var(--text-light-color)

    &__link
        display block
        padding 4em 0
