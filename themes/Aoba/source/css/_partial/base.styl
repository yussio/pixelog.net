body
    color var(--text-color)
    font-family sans-serif

a
    color var(--text-color)
    text-decoration none

p
    margin var(--space-default)

img
    max-width 100%
    vertical-align middle

blockquote
    margin var(--space-default)
    padding 0 1.272em
    color var(--text-sub-color)
    font-size .9em
    border-left .25em solid var(--border-color)

code
pre
    font-family consolas, Menlo, monospace

code:not(.hljs)
    margin 0 .5em
    padding 3px 10px
    background var(--bg-color)
    font-size .875em
    border-radius: 3px

select
    padding 0 1em
    border 1px solid var(--border-color)
    background url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 4 5'%3e%3cpath fill='%23444' d='M2 0L0 2h4zm0 5L0 3h4z'/%3e%3c/svg%3e") no-repeat right .5rem center/12px 10px, var(--bg-sub-color)
    color var(--text-color)
    border-radius 4px
