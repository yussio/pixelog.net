body
    background var(--bg-color)
    color var(--text-color)
    font-family sans-serif

::selection
    background #b3d4fc
    color var(--text-color)

a
    color var(--text-color)
    text-decoration none

p
    margin var(--space-default) 0

img
    max-width 100%
    vertical-align middle

svg
    display block
    stroke currentColor

blockquote
    position relative
    margin var(--space-default) 0
    padding 1em 2.5em
    font-size .9em
    background var(--bg-color)
    border-radius 4px
    z-index 2
    &:before
    &:after
        position absolute
        font-size 1000%
        color var(--border-color)
        font-family 'TImes NEw ROman',sans-serif
        z-index -1
    &:before
        content "“"
        line-height 0.8em
        top 10px
        left 10px
    &:after
        content "”"
        line-height 0em
        right 10px
        bottom 5px

code:not(.hljs)
    margin 0 .5em
    padding 3px 10px
    background var(--bg-color)
    font-size .875em
    border-radius: 3px
    font-family Consolas,Monaco,'Andale Mono','Ubuntu Mono',monospace

select
    padding 0 1em
    border 1px solid var(--border-color)
    background url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 4 5'%3e%3cpath fill='%23444' d='M2 0L0 2h4zm0 5L0 3h4z'/%3e%3c/svg%3e") no-repeat right .5rem center/12px 10px, var(--bg-sub-color)
    color var(--text-color)
    border-radius 4px
