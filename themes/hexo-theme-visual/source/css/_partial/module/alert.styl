.alert
    padding 1em 1.25em
    font-size var(--size-s1)
    border-left .4em solid
    background #d6efff
    border-color #b8daff
    color #1d4f87

    &.caution
        background #fff3cd
        border-color #ffdaa6
        color #674f19

    &.warning
        background #ffe1e4
        border-color #f5c6cb
        color #91202d

    a
      text-decoration underline
