<%
var tagName;
if(is_home()){
  tagName = 'h1';
}else{
  tagName = 'div';
}
%>

<header class="header" id="header">
  <nav class="nav">
      <ul class="nav__list">
          <% for (var i in theme.nav){ %>
              <li class="nav__item">
                  <a class="nav__link" href="<%- theme.nav[i] %>"><%= i %></a>
              </li>
          <% } %>
      </ul>
  </nav>
  <<%= tagName %> class="header__logo">
      <a class="header__link" href="<%= url_for('/') %>">
          <%= config.title %>
      </a>
  </<%= tagName %>>
</header>
