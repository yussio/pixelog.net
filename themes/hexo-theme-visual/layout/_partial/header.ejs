<%
var tagName;
if(is_home()){
  tagName = 'h1';
}else{
  tagName = 'div';
}
%>

<header class="header" id="header">
  <a class="header__link" href="<%= url_for('/') %>">
    <<%= tagName %> class="header__logo">
      <%= config.title %>        
    </<%= tagName %>>
    <div class="header__desc">
      <%= config.description %>
    </div>
  </a>
</header>
