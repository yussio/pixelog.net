.header-nav
  width: 100%
  height: 40px
  margin: 0 0 0 auto
  overflow: hidden
  position: relative
  z-index: 2
  transition: .2s all ease

  &__list
    display: flex
    list-style: none
    justify-content: flex-end;

    +media(sp)
      flex-direction: column

  &__logo
    margin: 0 auto 0 0
    +media(sp)
      width: 100%
      text-align: center

  &__title-link
    display: inline-block
    text-decoration: none
    color: #fff
    position: relative
    z-index: 2

  &__title
    margin: 0 auto 0 0
    svg
      +media(sp)
        height: 24px

  &__item
    margin: 0 0 0 36px

  &__item-link
    color: #fff
    text-decoration: none
    position: relative

    &::after
      position: absolute
      bottom: -2px
      left: 0
      content: ''
      width: 100%
      height: 2px
      background: #fff
      opacity: .8
      transform: scale(0, 1)
      transform-origin: center top
      transition: transform 0.2s

    &:hover::after
      transform: scale(1, 1)



// スマホ用ハンバーガーメニュー

#nav-switch
  display: none


#nav-btn
  display: none
  width: 32px
  height: 32px
  position: absolute
  top: 0
  right: 0
  cursor: pointer
  z-index: 5

  +media(sp)
    display: block

  span
    position: absolute
    left: 0
    width: 100%
    height: 3px
    background: #fff
    transition: 0.3s all  cubic-bezier(0.4, 0.0, 0.2, 1)
    border-radius: 4px

    &:nth-of-type(1)
      top:4px

    &:nth-of-type(2)
      top: 14px

    &:nth-of-type(3)
      bottom: 4px



#nav-switch:checked
  ~ .header-nav #nav-btn
    +media(pc)
      display: block  // メニューを開いた状態でPCモードへ移行したときメニュー閉じれなくなるバグを修正

    span
      &:nth-of-type(1)
        -webkit-transform:translateY(20px) rotate(-315deg)
        transform:translateY(10px) rotate(-315deg)

      &:nth-of-type(2)
        opacity:0

      &:nth-of-type(3)
        -webkit-transform: translateY(-11px) rotate(315deg)
        transform: translateY(-11px) rotate(315deg)


  + .header-nav
    height: 160px
