.toc
  overflow-y: auto;
  max-height: 70vh

  &-wrapper
    position: sticky
    top: 30px

  &-title
    margin: 0 0 12px 0;
    font-weight: bold
    border-bottom: 1px solid #ddd

  li
    list-style: none

  &-child
    margin: 0 0 0 1em


  &-link
    display: block
    padding: .3em
    font-size: 14px
    color: #333
    text-decoration: none


    &.active
      background: #f8f8f8
      color: #00cec9
