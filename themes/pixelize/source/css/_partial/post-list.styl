/* タイルデザイン */

.post-list
  display: flex
  flex-wrap: wrap
  justify-content: space-between

  &__item
    width: 48%
    margin: 0 0 40px 0
    list-style: none
    border: 1px solid #eee
    box-shadow: 0 0 6px 0 #eee
    transition: .2s transform ease

    &:hover
      transform: scale(1.01)
      box-shadow: 0 0 12px 1px #eee

  &__item-link
    display: block
    height: 100%;
    text-decoration: none
    color: #333

  &__thumbnail
    img
      width: 100%

  &__detail
    display: flex
    flex-direction: column
    padding: 24px
    +media(sp)
      padding: 12px



  &__title
    font-size: 18px
    +media(sp)
      font-size: 14px

    &::after
      content: ""
      display: block
      margin: 16px 0
      width: 20px
      height: 2px
      background: #ddd

  &__meta
    font-size: 14px
    color: #aaa
    +media(sp)
      font-size: 12px


    & i
      margin: 0 3px 0 0

  &__inner
    margin: 6px 0
