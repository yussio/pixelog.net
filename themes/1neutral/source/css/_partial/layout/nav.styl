.nav
    margin 4em 0 0 0
    font-size var(--size-s3)

    &__list
        display flex
        justify-content center

    &__item
        display block
        margin 0 .5em
        line-height 42px

    &__link
        display block
        padding 0 1em
        color rgba(255, 255, 255, .9)
        background rgba(255, 255, 255, .1)
        border 1px solid rgba(255, 255, 255, .2)
        border-radius .2em
        transition .15s ease
        transition-property background

        &:hover
            background rgba(255, 255, 255, .3)
